{
  "name": "simple-audio-recorder",
  "version": "0.0.1",
  "description": "Web audio recording library with encoding to mp3 and chunked output",
  "main": "src/AudioRecorder.js",
  "scripts": {
    "build": "webpack && webpack --config webpack.worklet-config.js && webpack --config webpack.worker-config.js",
    "start": "concurrently \"webpack --watch\" \"webpack --watch --config webpack.worklet-config.js\" \"webpack --watch --config webpack.worker-config.js\" \"live-server --no-browser\""
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.20.5",
    "@babel/preset-env": "^7.20.2",
    "babel-loader": "^9.1.0",
    "concurrently": "^7.6.0",
    "live-server": "1.2.1",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "lamejstmp": "1.0.1"
  }
}
